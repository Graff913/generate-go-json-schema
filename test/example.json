{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Example",
  "id": "https://example.com/exampleschema.json",
  "type": "object",
  "description": "An example JSON Schema",
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "$ref": "#/$defs/Address"
    },
    "status": {
      "$ref": "#/$defs/Status"
    },
    "period": {
      "oneOf": [
        {
          "$ref": "#/$defs/Period"
        },
        {
          "type": "null"
        }
      ]
    },
    "component": {
      "oneOf": [
        {
          "$ref": "#/$defs/Info"
        },
        {
          "$ref": "#/$defs/InfoV2"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "name",
    "address",
    "status"
  ],
  "$defs": {
    "Address": {
      "id": "address",
      "type": "object",
      "description": "Address",
      "properties": {
        "street": {
          "type": "string",
          "description": "Address 1",
          "maxLength": 40
        },
        "houseNumber": {
          "type": "integer",
          "description": "House Number"
        }
      },
      "required": [
        "street",
        "houseNumber"
      ]
    },
    "Status": {
      "type": "string",
      "enum": [
        "OPEN",
        "CLOSE"
      ]
    },
    "TextStatus": {
      "type": "string",
      "enum": [
        "create_text",
        "delete_text"
      ]
    },
    "TaskStatus": {
      "type": "string",
      "enum": [
        "create.task",
        "delete.task"
      ]
    },
    "Period": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "format": "date-time"
        },
        "to": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "from",
        "to"
      ]
    },
    "Info": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer"
        }
      },
      "required": [
        "id"
      ]
    },
    "InfoV2": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "version": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "version"
      ]
    }
  }
}